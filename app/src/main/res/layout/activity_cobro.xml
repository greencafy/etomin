<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#013ADF"
    tools:context=".cobro">
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Cobrar"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL A COBRAR"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textColor="#FFFFFF"
            android:textSize="46dp"/>

        <EditText
            android:id="@+id/pant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="0"
            android:inputType="number"
            android:textColorHint="#FFFFFF"
            android:textSize="46dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MXN"
            android:textColor="#2ECCFA"
            android:textSize="16dp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="ref."
                android:textColor="#BDBDBD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:text="Subtotal"
                android:textColor="#BDBDBD"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Propinas / Extras"
                android:textColor="#BDBDBD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="Calucular"
                android:textColor="#BDBDBD"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Concepto"
                android:textColor="#BDBDBD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:text="Pago"
                android:textColor="#BDBDBD" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/bt1"
                android:onClick="bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:background="#013ADF"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt2"
                android:onClick="bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#013ADF"
                android:textColorHint="#FFFFFF"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt3"
                android:onClick="bt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:background="#013ADF"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical">

            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:onClick="bt4"
                android:layout_marginLeft="40dp"
                android:background="#013ADF"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:onClick="bt5"
                android:layout_marginLeft="20dp"
                android:background="#013ADF"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="bt6"
                android:textColorHint="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:background="#013ADF"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical">

            <Button
                android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:onClick="bt7"
                android:layout_marginLeft="40dp"
                android:background="#013ADF"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColorHint="#FFFFFF"
                android:onClick="bt8"
                android:background="#013ADF"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:onClick="bt9"
                android:layout_marginLeft="20dp"
                android:background="#013ADF"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical">
            <Button
                android:id="@+id/btpunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btpunto"
                android:textColorHint="#FFFFFF"
                android:layout_marginLeft="40dp"
                android:background="#013ADF"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/bt0"
                android:onClick="bt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColorHint="#FFFFFF"
                android:background="#013ADF"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btBorrar"
                android:onClick="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:background="#013ADF"
                android:text="â‡"
                android:textColor="#FFFFFF"

                android:textSize="40dp" />


        </LinearLayout>


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/continuar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:text="Continuar"
            android:background="#FA5858"
            android:textColor="#FFFFFF"
            android:layout_height="60dp"
            />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>